<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="duke"
          class="com.artiushenko.springTutorial.Juggler">
        <constructor-arg value="15"/>
    </bean>
    <bean id="sonnet29"
          class="com.artiushenko.springTutorial.Sonnet29"/>
    <bean id="poeticDuke"
          class="com.artiushenko.springTutorial.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg ref="sonnet29"/>
    </bean>
    <bean id="theStage"
          factory-method="getInstance"
          class="com.artiushenko.springTutorial.Stage">
    </bean>
    <bean id="kenny"
    class="com.artiushenko.springTutorial.Instrumentalist"
        p:song = "Jingle Bells"
        p:instrument-ref="piano">
        <!--<property name="song" value ="Jingle Bells"/>-->
        <!--<property name="instrument">-->
            <!--<bean class="com.artiushenko.springTutorial.Saxophone"/>-->
        <!--</property>-->
    </bean>
    <bean id="saxophone"
          class="com.artiushenko.springTutorial.Saxophone"/>
    <bean id="piano"
          class="com.artiushenko.springTutorial.Piano"/>
    <bean id="hank"
          class="com.artiushenko.springTutorial.OneManBand">
        <property name="instruments">
            <map>
                <entry key="piano" value-ref="piano"/>
                <entry key="saxophone" value-ref="saxophone"/>
            </map>
        </property>
    </bean>



</beans>